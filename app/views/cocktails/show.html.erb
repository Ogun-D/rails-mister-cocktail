<h1> <%= @cocktail.name %> </h1>

<ul>
  <% @cocktail.doses.each do |dose| %>
  <li> <%= dose.description %> <%= dose.ingredient.name %> <%= link_to "Delete dose", dose_path(dose), method: :delete, data: { confirm: 'Are you sure?' } %></li>
  <% end %>
</ul>


<%= link_to "Go Home", cocktails_path %>
<%= link_to "Add a dose", new_cocktail_dose_path(@cocktail) %>
<%= link_to 'Edit', edit_cocktail_path(@cocktail) %>
<%= link_to 'Destroy', cocktail_path(@cocktail), method: :delete, data: { confirm: 'Are you sure?' } %>



